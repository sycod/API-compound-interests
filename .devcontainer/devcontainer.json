{
  "name": "Python 3.11",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "Makefile",
        "README.md"
      ]
    },
    "vscode": {
      "settings": {
        "workbench.panel.defaultLocation": "right",
        "notebook.lineNumbers": "on",
        "notebook.output.wordWrap": true,
      },
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.pylint",
        "xelad0m.jupyter-toc",
        "mhutchie.git-graph",
        "GitHub.copilot",
      ]
    }
  },
  "onCreateCommand": {
    "apt_update": "sudo apt update && sudo apt -y upgrade",
    "venv_create": "python -m venv ~/.venv",
  },
  "updateContentCommand": {
    "apt_update": "sudo apt update && sudo apt -y upgrade",
    "pip_inst_reqs": "~/.venv/bin/pip3 install --upgrade pip && ~/.venv/bin/pip3 install -r requirements.txt && echo 'âœ… Packages installed and Requirements met'",
  },
  "postCreateCommand": {
    "bashrc_update": "chmod +x ./.devcontainer/bashrc_update.sh && ./.devcontainer/bashrc_update.sh",
  },
}